    <h5>Other</h5>

    <%= check_box_tag(:location, "Burnaby") %>
    <%= label_tag(:burnaby, "Burnaby") %>

    <%= check_box_tag(:location, "Coquitlam") %>
    <%= label_tag(:coquitlam, "Coquitlam") %>

    <%= check_box_tag(:location, "New Westminster") %>
    <%= label_tag(:new_westminster, "New Westminster") %>

    <%= check_box_tag(:location, "Richmond") %>
    <%= label_tag(:richmond, "Richmond") %>
</div>

<div class="features-container">
    <h5>Features</h5>
    <%= check_box_tag("features[]", "Free Parking") %>
    <%= label_tag(:free_parking) %>

    <%= check_box_tag("features[]", "Paid Parking") %>
