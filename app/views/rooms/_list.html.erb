<% @rooms.each do |room| %>

    <div>
        <h5><%= link_to(room.name, room_path(room.id)) %></h5>
        <p><%= room.location %></p>
        <p><%= room.capacity %></p>

        <% unless room.features.empty? %>
            <p>Features: <% room.features.each do |feature| %>
                <%= link_to(
                    feature.name, rooms_path(feature: feature.name)
                ) %>
            <% end %>
            </p>
        <% end %>
    </div>
<% end %>